{
  "manifest_version": 3,
  "name": "BTube",
  "description": "This extension makes YouTube more productive",
  "version": "0.1",
  "permissions": ["activeTab", "webNavigation", "storage", "tabs", "history", "webRequest","declarativeNetRequest"],
  "host_permissions": ["*://*.youtube.com/*"
],


  "declarative_net_request": {
  "rule_resources": [
    {
      "id": "btube_rules",
      "enabled": true,
      "path": "rules.json"
    }
  ]
},
  
  "background": {
    "service_worker": "js/background.js"
  },
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "icons": {
    "128": "assets/logo_v2.png"
  }
}
